<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/currencyName"
        style="@style/CurrencyItem"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/currencyRate"
        style="@style/CurrencyItem"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="180dp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/currencyCount"
        style="@style/CurrencyItem"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/currencyEdit"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/currencyEdit"
        style="@style/CurrencyItem"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@id/currencyDelete"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/currencyDelete"
        style="@style/CurrencyItem"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:ignore="ContentDescription" />

</RelativeLayout>
