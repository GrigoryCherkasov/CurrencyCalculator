<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        >
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient
                android:startColor="#afd1db"
                android:endColor="#7fa1ab"
                android:angle="270"/>
        </shape>
    </item>

    <item>
        <inset
            android:inset="2dp">

        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@android:color/white"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:centerX="0.5"/>

        </shape>
        </inset>
    </item>
    <item>
        <inset
            android:inset="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient
                android:startColor="#eef4f0"
                android:endColor="#afd1db"
                android:angle="270"/>
        </shape>
        </inset>
    </item>
</layer-list>
