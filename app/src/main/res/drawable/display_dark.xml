<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#1E3B61"
                android:endColor="#296682"
                android:angle="270"/>
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#afd1db"
                android:centerColor="@android:color/transparent"
                android:endColor="@android:color/transparent"
                android:centerX="0.5"/>

        </shape>
    </item>


    <item
        android:left="4dp"
        android:top="3dp"
        android:right="4dp"
        android:bottom="4dp">

        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="#315a7a"/>
        </shape>
    </item>
</layer-list>
