<resources>
    <style name="CalculatorPad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/background</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:rowCount">7</item>
        <item name="android:columnCount">4</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="DisplayPad">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/display_dark</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:columnCount">5</item>
        <item name="android:rowCount">7</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_columnWeight">4</item>
        <item name="android:layout_columnSpan">4</item>
    </style>

    <style name="DisplayGridCell" parent="MatchWeight">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="DisplayGridCellCurrency" parent="DisplayGridCell">
        <item name="android:background">@drawable/white_corner</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DisplayGridCellValueLast" parent="DisplayGridCell">
        <item name="android:layout_columnWeight">4</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="DisplayGridCellValue" parent="DisplayGridCellValueLast">
        <item name="android:background">@drawable/white_horizontal_line</item>
    </style>

    <style name="DisplayGridCellExpression" parent="DisplayGridCellValue">
        <item name="android:layout_columnWeight">5</item>
        <item name="android:layout_columnSpan">5</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_rowSpan">1</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="DisplayGridCellCurrencyLast" parent="DisplayGridCell">
        <item name="android:background">@drawable/white_vertical_line</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">2</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="DialogText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CurrencyItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ButtonPad">
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:rowCount">5</item>
        <item name="android:columnCount">4</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Button" parent="MatchWeight">
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
    </style>

    <style name="ButtonCyan" parent="Button">
        <item name="android:background">@drawable/button_cyan</item>
    </style>

    <style name="ButtonPink" parent="Button">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <style name="ButtonBlue" parent="Button">
        <item name="android:background">@drawable/button_blue</item>
    </style>

    <style name="ButtonDark" parent="Button">
        <item name="android:background">@drawable/button_dark</item>
    </style>

    <style name="ButtonOrange" parent="Button">
        <item name="android:background">@drawable/button_orange</item>
    </style>

</resources>